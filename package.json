{
  "name": "cypress-cicd-demo",
  "version": "1.0.0",
  "description": "A comprehensive CI/CD test project with Cypress integration",
  "main": "index.js",
  "scripts": {
    "start": "serve -s public -p 3000",
    "build": "echo 'Build completed'",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "cypress:run:edge": "cypress run --browser edge",
    "cypress:run:headless": "cypress run --headless",
    "cypress:run:parallel": "cypress run --parallel --record",
    "test": "cypress run",
    "test:ci": "cypress run --config-file cypress.config.ci.js",
    "test:smoke": "cypress run --env testType=smoke",
    "test:regression": "cypress run --env testType=regression",
    "install:serve": "npm install -g serve",
    "pretest": "npm run build"
  },
  "keywords": [
    "cypress",
    "testing",
    "e2e",
    "ci-cd",
    "automation",
    "github-actions",
    "gitlab-ci",
    "circleci",
    "jenkins"
  ],
  "author": "Cypress CI/CD Demo",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.0",
    "@cypress/grep": "^4.0.1",
    "cypress-mochawesome-reporter": "^3.7.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "cypress-multi-reporters": "^1.6.4",
    "mocha": "^10.2.0"
  },
  "dependencies": {
    "serve": "^14.2.1"
  }
}